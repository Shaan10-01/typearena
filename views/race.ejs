    <link rel="stylesheet" href="/css/nav.css">
    <link rel="stylesheet" href="/css/signup.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto|Squada+One|Open+Sans&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/077c16c1d1.js" crossorigin="anonymous"></script> 
